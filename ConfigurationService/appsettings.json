{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres-config-db;Port=5432;Database=configuration_db;Username=config_user;Password=config_password"
  },
  "Eureka": {
    "ServerUrl": "http://eureka:8761/eureka",
    "RequestTimeoutSeconds": 10,
    "HeartbeatIntervalSeconds": 30,
    "AutoRegister": true
  },
  "ServiceDiscovery": {
    "ServiceName": "configuration-service",
    "ServiceAddress": "configuration-service",
    "ServicePort": 80
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/configuration-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",

  "RabbitMQ": {
    "HostName": "rabbitmq",
    "UserName": "service",
    "Password": "A1qwert",
    "Port": 5672
  },

  "Sip": {
    "Domain": "sip.pbx",
    "ProxyUri": "sip:172.16.211.135:5060"
  }
}
